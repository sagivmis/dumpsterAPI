    "fastify": "^4.5.3",
    "fastify-plugin": "^4.2.1",
    "keyword-extractor": "0.0.23",
    "mongodb": "^4.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.14",
    "concurrently": "^7.4.0",
    "copyfiles": "^2.4.1",
    "json-schema-to-typescript": "^11.0.2",
    "rimraf": "^3.0.2",
