  "main": "dist/src/server.js",
  "scripts": {
    "compile-schemas:debris": "json2ts -i src/schemas/debris -o src/schemas/ts/debris",
    "compile-schemas:users": "json2ts -i src/schemas/users -o src/schemas/ts/users",
